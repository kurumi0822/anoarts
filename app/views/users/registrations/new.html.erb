<header class="header-top">
    <div class = "logo">
      <%= image_tag "name.png", width: '100%', height: '100%' %>
    </div>
  </header>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <h2>名前</h2>
    <%= f.text_field :name, autofocus: true,class:"textarea" %>
  </div>

  <div class="field">
    <h2>メールアドレス</h2>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"textarea" %>
  </div>

  <div class="field">
    <h2>パスワード</h2>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上で設定してください)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"textarea" %>
  </div>

  <div class="field">
    <h2>パスワードの確認</h2>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"textarea" %>
  </div>

  <div class="button">
    <%= f.submit "Sign up",class:"actions" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
